<h1>The Tech Blog</h1>
<section id="currentBlogComment">
  <section class="card">
      <div class="card-body">
        
        <h5>Posted by {{Blog.user.username}}</h5>
        <p class="card-text">{{hbsBlog.content}}</p>
    </div>
  </section>
{{#each hbsBlog.comments}}
  <section class="card">
    <div class="card-body">
      <p>Comment</p>
      <p class="card-text">{{body}}</p>
    </div>
  </section>
{{/each}}
</section>
<section class="card text-center">
<div class="card-body">
  <h3 class="card-title">Comment</h3>
  <form id="newComment">
    <div class="card-text"></div>
      <input id="hiddenCommentId" hidden="true" value="{Blog.id}}"></input>
      <textarea id="comment" placeholder="Your comment goes here"></textarea>
    </div>
    <button id="create">Submit</button>
</form>
</div>
</section>

<script src="/js/comment.js"></script>